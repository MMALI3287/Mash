<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#e2cfdd"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Question"
        android:layout_width="match_parent"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:text="Which team has qualified for the semi-finals of the FIFA World Cup 2022?"
        />

    <CheckBox
        android:id="@+id/Japan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Question"
        android:textSize="18sp"
        android:text="Japan" />
    <CheckBox
        android:id="@+id/England"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Japan"
        android:textSize="18sp"
        android:text="England" />
    <CheckBox
        android:id="@+id/Morocco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/England"
        android:textSize="18sp"
        android:text="Morocco" />

    <Button
        android:id="@+id/CLICK"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_above="@id/Result"
        android:textSize="21sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:background="#6201ef"
        android:text="CLICK" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="match_parent"
        android:background="#6799cd"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="#37516c"
        android:text="HELLO" />

</RelativeLayout>
